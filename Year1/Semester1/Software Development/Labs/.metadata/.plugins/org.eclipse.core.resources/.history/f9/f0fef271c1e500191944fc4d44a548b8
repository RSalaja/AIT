import java.util.Scanner;

public class P2_5 
{

	public static void main(String[] args) 
	{
		Scanner in = new Scanner(System.in);
		System.out.print("Please enter 2 Numbers: ");
		int num1 = in.nextInt();
		int num2 = in.nextInt();
		System.out.printf("Sum: %17d" , (num1+num2));
		System.out.printf("Differnece: %17d" , (num1 - num2));	
		System.out.printf("Product: %17d"  , (num1 * num2));	
		System.out.printf("Average: %17d" , (num1+num2)/2.0);	
		System.out.printf("Distance: %17d" , (Math.abs(num1 - num2)));	
		System.out.printf("Maximum: %17d" , (Math.max(num1, num2)));	
		System.out.printf("Minimum: %17d" , (Math.max(num1, num2)));	
		
	}
}

