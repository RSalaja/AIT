//Import java class
import java.util.Scanner;
public class P2_5 
{

	public static void main(String[] args) 
	{
		//Take in input 
		Scanner in = new Scanner(System.in);
		
		//Take in input num1
		System.out.print("Please enter your First Number: ");
		int num1 = in.nextInt();
		
		//Take in input num1
		System.out.print("Please enter your Second Number: ");
		int num2 = in.nextInt();
		
		//Input
		System.out.println("Your Numbers Are:\n"+num1+ "\n" +num2);
				
		//Print out output
		System.out.println("The sum is " + (num1+num2));	
		
		System.out.println("The differnece is " + (num1 - num2));	
		
		System.out.println("The product is "  + (num1 * num2));	
		
		System.out.println("The average is " + (num1+num2)/2);	
		
		System.out.println("The distance is " + (Math.abs(num1 - num2)));	
		
		System.out.println("The maximum is " + (Math.max(num1, num2)));	
		
		System.out.println("The minimum is " + (Math.max(num1, num2)));	
		
	}
}
